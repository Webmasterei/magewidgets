    <magewidgets_content type="webmasterei_magewidgets/Content" translate="name description">
        <name>Webmasterei | Content Element</name>
        <description>Erstellt ein Content Element mit Bild/Video, Titel, Text, Link in der linken oder rechten Spalte.
        </description>
        <parameters>
            <content_column>
                <visible>1</visible>
                <label>Aufteilung</label>
                <description>Für Gruppenprodukte mit großen Bildern mitte "Groß" wählen.</description>
                <type>select</type>
                <values>
                    <large>
                        <label>Bild/Video links</label>
                        <value>left</value>
                    </large>
                    <small>
                        <label>Bild/Video rechts</label>
                        <value>right</value>
                    </small>
                </values>
            </content_column>
            <content_image>
                <visible>1</visible>
                <label>Bild</label>
                <description>Ausgabeformat ist 622x325 px. JPG Files sind bei Bildern immer besser! Es wird nicht
                    skaliert.
                </description>
                <type>widgetimagechooser/chooser</type>
            </content_image>
            <content_title>
                <visible>1</visible>
                <label>Titel</label>
                <description>Bitte geben Sie hier den Titel ein.</description>
                <type>text</type>
            </content_title>
            <content_text>
                <visible>1</visible>
                <label>Text</label>
                <description>Hier kommt der Text rein. Basic-HTML ist erlaubt.</description>
                <type>textarea</type>
            </content_text>
            <content_link>
                <visible>1</visible>
                <label>Link</label>
                <description>Bitte geben Sie hier den Link als relativen Pfad zur Homepage ein. Bspl.:
                    "/villeroy-und-boch.html"
                </description>
                <type>text</type>
            </content_link>
            <content_link_text>
                <visible>1</visible>
                <label>Linktext</label>
                <description>Ist kein Text angegeben, wird der Titel genommen.</description>
                <type>text</type>
            </content_link_text>
            <content_video>
                <visible>1</visible>
                <label>Video-URL</label>
                <description>Der Link zum Video angeben.</description>
                <type>text</type>
            </content_video>
            <template translate="label">
                <label>Template</label>
                <visible>0</visible>
                <type>select</type>
                <value>webmasterei/magewidgets/Content.phtml</value>
            </template>
        </parameters>
    </magewidgets_content>

