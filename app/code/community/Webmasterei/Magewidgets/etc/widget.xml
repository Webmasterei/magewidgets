<?xml version="1.0"?>
<widgets>
    <magewidgets_header type="webmasterei_magewidgets/Header" translate="name description">
        <name>Webmasterei | Brandpage Header</name>
        <description>Erstellt den Content-Header einer Hersteller-Landingpage</description>
        <parameters>
            <!-- acwp = ActiveCodelineWidgetParameter -->
            <brand_header_logo>
                <visible>1</visible>
                <label>Herstellerlogo</label>
                <description>Ausgabeformat ist 160x120 px mit Alphakanal. Bitte nur *.png files. Es wird nicht skaliert.
                </description>
                <type>widgetimagechooser/chooser</type>
            </brand_header_logo>
            <brand_header_img>
                <visible>1</visible>
                <required>1</required>
                <label>Stimmungsbild</label>
                <description>Bei Bootstrap 1-col Layout sollte ein Bildmaß von 1140x breite gewählt werden, damit das Bild über die volle Breite geht. Die Höhe sollte ca. 450px betragen. Bitte nur *jpg, progressiv, Qualität 60 Es wird nicht skaliert.
                </description>
                <type>widgetimagechooser/chooser</type>
            </brand_header_img>
            <brand_header_title>
                <visible>1</visible>
                <label>Titel</label>
                <description>Bitte geben Sie hier den großen H1 Titel ein.</description>
                <type>text</type>
            </brand_header_title>
            <brand_header_subTitle>
                <visible>1</visible>
                <label>Untertitel</label>
                <description>Der Untertitel des Sliders.</description>
                <type>text</type>
            </brand_header_subTitle>
            <call2Action>
                <visible>1</visible>
                <label>Call 2 Action Text</label>
                <description>Hier kommt der Button Text hin.</description>
                <type>text</type>
            </call2Action>
            <brand_header_titlePosition>
                <visible>1</visible>
                <label>Position des Titels und Untertitel</label>
                <description>Sie können verschiedene Positionen für Titel und Untertitel wählen.</description>
                <type>select</type>
                <values>
                    <value_1>
                        <label>Titel oben rechts </label>
                        <value>top-right</value>
                    </value_1>
                    <value_2>
                        <label>Titel unten rechts</label>
                        <value>bottom-right</value>
                    </value_2>
                    <value_2>
                        <label>Titel unten links</label>
                        <value>left-bottom</value>
                    </value_2>
                </values>
                <sort_order>0</sort_order>
            </brand_header_titlePosition>
            <brand_header_link>
                <visible>1</visible>
                <label>Link</label>
                <description>Das Linkziel des Headers.</description>
                <type>text</type>
            </brand_header_link>

            <template translate="label">
                <label>Template</label>
                <visible>0</visible>
                <type>select</type>
                <value>webmasterei/magewidgets/Header.phtml</value>
            </template>
        </parameters>
    </magewidgets_header>
