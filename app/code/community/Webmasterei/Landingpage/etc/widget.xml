                <description>Hier die Kategorie ID angeben.</description>
                <type>text</type>
            </categoryId>
            <menu_product_text>
                <required>0</required>
                <visible>1</visible>
                <label>Bild-Alttext</label>
                <description>Hier kann der Bildtext hinterlegt werden.</description>
                <type>text</type>
            </menu_product_text>
            <menu_category_link>
                <repquired>0</repquired>
                <visible>1</visible>
                <label>Kategorie Link</label>
                <description>Bitte geben Sie hier den Link als relativen Pfad zur Homepage ein. Bspl.:
                    "/villeroy-und-boch.html"
                </description>
                <type>text</type>
            </menu_category_link>
            <menu_category_text>
                <required>0</required>
                <visible>1</visible>
                <label>Kategorie Weiter Text</label>
                <description>Hier kann der Bildtext hinterlegt werden.</description>
                <type>text</type>
            </menu_category_text>
            <template translate="label">
                <label>Template</label>
                <visible>0</visible>
                <type>select</type>
                <value>webmasterei/landingpage/MenuProducts.phtml</value>
            </template>
        </parameters>
    </menu_product>

</widgets>