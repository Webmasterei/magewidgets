<?xml version="1.0"?>
<widgets>
    <landingpage_header_widget type="landingpage/Header" translate="name description">
        <name>Webmasterei | Landingpage Headline</name>
        <description>Erstellt den Content-Header einer Hersteller-Landingpage</description>
        <parameters>
            <landingpage_title_element>
                <visible>1</visible>
                <label>Title Element</label>
                <description>Wählen Sie den Typ des Elements.</description>
                <type>select</type>
                <values>
                    <value_1>
                        <label>H1</label>
                        <value>h1</value>
                    </value_1>
                    <value_2>
                        <label>H2</label>
                        <value>h2</value>
                    </value_2>
                    <value_3>
                        <label>H3</label>
                        <value>h3</value>
                    </value_3>
                    <value_4>
                        <label>DIV</label>
                        <value>div</value>
                    </value_4>
                </values>
                <sort_order>0</sort_order>
            </landingpage_title_element>
            <landingpage_header_title>
                <visible>1</visible>
                <label>Titel 1</label>
                <description>1. oder einzige Zeile der Überschrift ein.</description>
                <type>text</type>
            </landingpage_header_title>
            <landingpage_header_subtitle>
                <visible>1</visible>
                <label>Titel 2</label>
                <description>2. Zeile der Überschrift (oder leer)</description>
                <type>text</type>
            </landingpage_header_subtitle>
            <landingpage_header_css>
                <visible>1</visible>
                <label>CSS Selector</label>
                <description>Sie können verschiedene CSS Selektoren wählen.</description>
                <type>select</type>
                <values>
                    <value_1>
                        <label>CSS Option 1</label>
                        <value>css_option_1</value>
                    </value_1>
                    <value_2>
                        <label>CSS Option 2</label>
                        <value>css_option_2</value>
                    </value_2>
                    <value_3>
                        <label>CSS Option 3</label>
                        <value>css_option_3</value>
                    </value_3>
                    <value_4>
                        <label>CSS Option 4</label>
                        <value>css_option_4</value>
                    </value_4>
                </values>
                <sort_order>0</sort_order>
            </landingpage_header_css>
            <template translate="label">
                <label>Template</label>
                <visible>0</visible>
                <type>select</type>
                <value>webmasterei/landingpage/Header.phtml</value>
            </template>
        </parameters>
    </landingpage_header_widget>
    <landingpage_topProducts type="landingpage/TopProducts" translate="name description">
        <name>Webmasterei | Landingpage Top-Products</name>
        <description>Erstellt 3 Spalten mit Produktneuheiten | Slider | Aktuelle Angebote</description>
        <parameters>
            <category_id_1>
                <visible>1</visible>
                <label>Kategorie der Produktneuheiten</label>
                <description>(Optional) Hier kann eine spezielle Kategorie gesetzt werden.</description>
                <type>Text</type>
            </category_id_1>
            <category_id_2>
                <visible>1</visible>
                <label>Kategorie der Angebote</label>
                <description>(Optional) Hier kann eine spezielle Kategorie gesetzt werden.</description>
                <type>Text</type>
            </category_id_2>
            <slider_id>
                <visible>1</visible>
                <required>1</required>
                <label>Content Element ID</label>
                <description>Hier wird der Name der Content Element ID's hinterlegt, die die einzelnen Slider Elemente beinhalten. z.B. "slider_", ruft slider_1, slider_2 usw auf....</description>
                <type>Text</type>
            </slider_id>
            <css>
                <visible>1</visible>
                <label>CSS Selector</label>
                <description>Sie können verschiedene CSS Selektoren wählen.</description>
                <type>select</type>
                <values>
                    <value_1>
                        <label>CSS Option 1</label>
                        <value>css_option_1</value>
                    </value_1>
                    <value_2>
                        <label>CSS Option 2</label>
                        <value>css_option_2</value>
                    </value_2>
                    <value_3>
                        <label>CSS Option 3</label>
                        <value>css_option_3</value>
                    </value_3>
                    <value_4>
                        <label>CSS Option 4</label>
                        <value>css_option_4</value>
                    </value_4>
                </values>
                <sort_order>0</sort_order>
            </css>
            <template translate="label">
                <label>Template</label>
                <visible>0</visible>
                <type>select</type>
                <value>webmasterei/landingpage/TopProducts.phtml</value>
            </template>
        </parameters>
    </landingpage_topProducts>
    <landingpage_slider_element type="landingpage/Slider" translate="name description">
        <name>Webmasterei | Landingpage Slider Element</name>
        <description>Define Slider Elements here.</description>
        <parameters>
            <headline>
                <visible>1</visible>
                <required>1</required>
                <label>Headline</label>
                <type>text</type>
            </headline>
            <image>
                <visible>1</visible>
                <required>1</required>
                <label>Image</label>
                <type>widgetimagechooser/chooser</type>
            </image>
            <button_text>
                <visible>1</visible>
                <required>1</required>
                <label>Button Text</label>
                <type>text</type>
            </button_text>
            <button_link>
                <visible>1</visible>
                <required>1</required>
                <label>Button Link</label>
                <description>Please give a RELATIVE LINK i.E. "my-product.html"</description>
                <type>text</type>
            </button_link>
            <template translate="label">
                <label>Template</label>
                <visible>0</visible>
                <type>select</type>
                <value>webmasterei/landingpage/Slider.phtml</value>
            </template>
        </parameters>
    </landingpage_slider_element>
    <landingpage_callout_element type="landingpage/Callout" translate="name description">
        <name>Webmasterei | Landingpage Callout Element</name>
        <description>Define the callout here.</description>
        <parameters>
            <subline>
                <visible>1</visible>
                <required>0</required>
                <label>Subline</label>
                <type>text</type>
            </subline>
            <headline>
                <visible>1</visible>
                <required>1</required>
                <label>Headline</label>
                <type>text</type>
            </headline>
            <image>
                <visible>1</visible>
                <required>1</required>
                <label>Image</label>
                <type>widgetimagechooser/chooser</type>
            </image>
            <button_text>
                <visible>1</visible>
                <required></required>
                <label>Button Text</label>
                <type>text</type>
            </button_text>
            <button_link>
                <visible>1</visible>
                <required></required>
                <label>Button Link</label>
                <description>Please give a RELATIVE LINK i.E. "my-product.html"</description>
                <type>text</type>
            </button_link>
            <template translate="label">
                <label>Template</label>
                <visible>0</visible>
                <type>select</type>
                <value>webmasterei/landingpage/Callout.phtml</value>
            </template>
        </parameters>
    </landingpage_callout_element>
    <landingpage_product_widget type="landingpage/Products" translate="name description">
        <name>Webmasterei | Landingpage Products</name>
        <description>Vorschau auf Produkte in CMS-Blöcken</description>
        <parameters>
            <product_1>
                <visible>1</visible>
                <required>1</required>
                <label>Produkt 1</label>
                <type>text</type>
                <sort_order>10</sort_order>
            </product_1>
            <product_1_text translate="label description">
                <visible>1</visible>
                <label>SEO Beschreibung des Produkt 1</label>
                <description>Diese Beschreibung ersetzt den automatisch gezogenen Produkttext.</description>
                <type>textarea</type>
                <sort_order>20</sort_order>
            </product_1_text>
            <product_2>
                <visible>1</visible>
                <required>1</required>
                <label>Produkt 2</label>
                <type>text</type>
                <sort_order>30</sort_order>
            </product_2>
            <product_2_text translate="label description">
                <visible>1</visible>
                <label>SEO Beschreibung des Produkt 2</label>
                <description>Diese Beschreibung ersetzt den automatisch gezogenen Produkttext.</description>
                <type>textarea</type>
                <sort_order>40</sort_order>
            </product_2_text>
            <product_3>
                <visible>1</visible>
                <required>0</required>
                <label>Produkt 3</label>
                <type>text</type>
                <sort_order>45</sort_order>
            </product_3>
            <product_3_text translate="label description">
                <visible>1</visible>
                <label>SEO Beschreibung des Produkt 3</label>
                <description>Diese Beschreibung ersetzt den automatisch gezogenen Produkttext.</description>
                <type>textarea</type>
                <sort_order>50</sort_order>
            </product_3_text>
            <product_4>
                <visible>1</visible>
                <required>0</required>
                <label>Produkt 4</label>
                <type>text</type>
                <sort_order>60</sort_order>
            </product_4>
            <product_4_text translate="label description">
                <visible>1</visible>
                <label>SEO Beschreibung des Produkt 4</label>
                <description>Diese Beschreibung ersetzt den automatisch gezogenen Produkttext.</description>
                <type>textarea</type>
                <sort_order>70</sort_order>
            </product_4_text>
            <block_title translate="label">
                <visible>1</visible>
                <label>Produkt Block Titel</label>
                <type>text</type>
                <sort_order>0</sort_order>
            </block_title>
            <product_size>
                <visible>1</visible>
                <label>Bildgröße</label>
                <description>Für Gruppenprodukte mit großen Bildern mitte "Groß" wählen.</description>
                <type>select</type>
                <values>
                    <large>
                        <label>Groß</label>
                        <value>large</value>
                    </large>
                    <small>
                        <label>Klein</label>
                        <value>small</value>
                    </small>
                </values>
                <sort_order>0</sort_order>
            </product_size>
            <template translate="label">
                <label>Template</label>
                <visible>0</visible>
                <type>select</type>
                <value>webmasterei/landingpage/Products.phtml</value>
            </template>
        </parameters>
    </landingpage_product_widget>
    <landingpage_categories_widget type="landingpage/Categories" translate="name description">
        <name>Webmasterei | Landingpage Categories</name>
        <description>csv Liste an Kategorie IDs die gezogen werden sollen.</description>
        <parameters>
            <category_ids>
                <visible>1</visible>
                <required>1</required>
                <label>Anzahl an Kategorien</label>
                <description>Geben Sie eine Liste an Kategorie IDs an "56,5,21,4" usw...</description>
                <type>text</type>
                <sort_order>20</sort_order>
            </category_ids>
            <category_widget_title>
                <visible>1</visible>
                <required>0</required>
                <label>Titel </label>
                <description>Der Titel der Kategorie.</description>
                <type>text</type>
                <sort_order>10</sort_order>
            </category_widget_title>
            <template translate="label">
                <label>Template</label>
                <visible>0</visible>
                <type>select</type>
                <value>webmasterei/landingpage/Categories.phtml</value>
            </template>
        </parameters>
    </landingpage_categories_widget>
    <landingpage_content_widget type="landingpage/Content" translate="name description">
        <name>Webmasterei | Content Element</name>
        <description>Erstellt ein Content Element mit Bild/Video, Titel, Text, Link in der linken oder rechten Spalte.
        </description>
        <parameters>
            <content_column>
                <visible>1</visible>
                <label>Aufteilung</label>
                <description>Für Gruppenprodukte mit großen Bildern mitte "Groß" wählen.</description>
                <type>select</type>
                <values>
                    <large>
                        <label>Bild/Video links</label>
                        <value>left</value>
                    </large>
                    <small>
                        <label>Bild/Video rechts</label>
                        <value>right</value>
                    </small>
                </values>
            </content_column>
            <content_image>
                <visible>1</visible>
                <label>Bild</label>
                <description>Ausgabeformat ist 622x325 px. JPG Files sind bei Bildern immer besser! Es wird nicht
                    skaliert.
                </description>
                <type>widgetimagechooser/chooser</type>
            </content_image>
            <content_title>
                <visible>1</visible>
                <label>Titel</label>
                <description>Bitte geben Sie hier den Titel ein.</description>
                <type>text</type>
            </content_title>
            <content_text>
                <visible>1</visible>
                <label>Text</label>
                <description>Hier kommt der Text rein. Basic-HTML ist erlaubt.</description>
                <type>textarea</type>
            </content_text>
            <content_link>
                <visible>1</visible>
                <label>Link</label>
                <description>Bitte geben Sie hier den Link als relativen Pfad zur Homepage ein. Bspl.:
                    "/villeroy-und-boch.html"
                </description>
                <type>text</type>
            </content_link>
            <content_link_text>
                <visible>1</visible>
                <label>Linktext</label>
                <description>Ist kein Text angegeben, wird der Titel genommen.</description>
                <type>text</type>
            </content_link_text>
            <content_video>
                <visible>1</visible>
                <label>Video-URL</label>
                <description>Der Link zum Video angeben.</description>
                <type>text</type>
            </content_video>
            <template translate="label">
                <label>Template</label>
                <visible>0</visible>
                <type>select</type>
                <value>webmasterei/landingpage/Content.phtml</value>
            </template>
        </parameters>
    </landingpage_content_widget>
    <landingpage_blockitems type="landingpage/Blockitems" translate="name description">
        <name>Webmasterei | Landingpage Block Items</name>
        <description>Grab a list of Comma Separated Block ID'S and show them.</description>
        <parameters>
            <block_ids>
                <visible>1</visible>
                <label>Block ID's</label>
                <description>Block ID's like "my_block_id,my_other_block_id"</description>
                <type>text</type>
            </block_ids>
            <template translate="label">
                <label>Template</label>
                <visible>0</visible>
                <type>select</type>
                <value>webmasterei/landingpage/Blockitems.phtml</value>
            </template>
        </parameters>
    </landingpage_blockitems>
</widgets>