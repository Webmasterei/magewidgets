<?xml version="1.0"?>
<widgets>
    <brand_header_widget type="landingpage/Header" translate="name description">
        <name>Webmasterei | Landingpage Header</name>
        <description>Erstellt den Content-Header einer Hersteller-Landingpage</description>
        <parameters>
            <!-- acwp = ActiveCodelineWidgetParameter -->
            <brand_header_logo>
                <visible>1</visible>
                <label>Herstellerlogo</label>
                <description>Ausgabeformat ist 160x120 px mit Alphakanal. Bitte nur *.png files. Es wird nicht skaliert.
                </description>
                <type>widgetimagechooser/chooser</type>
            </brand_header_logo>
            <brand_header_img>
                <visible>1</visible>
                <required>1</required>
                <label>Stimmungsbild</label>
                <description>Ausgabeformat ist 1140x595px bitte nur *jpg, progressiv, Qualität 60 Es wird nicht skaliert.
                </description>
                <type>widgetimagechooser/chooser</type>
            </brand_header_img>
            <h1_option>
                <visible>1</visible>
                <label>H1 Option</label>
                <description>Wählen, ob Title 1 oder Title 2 H1 ist. Der andere Title wir mit p ausgezeichnet.</description>
                <type>select</type>
                <values>
                    <value_1>
                        <label>Titel 1</label>
                        <value>title-1</value>
                    </value_1>
                    <value_2>
                        <label>Title 2</label>
                        <value>title-2</value>
                    </value_2>
                    <value_3>
                        <label>Keine H1</label>
                        <value>noH1</value>
                    </value_3>
                </values>
                <sort_order>0</sort_order>
            </h1_option>
            <brand_header_title>
                <visible>1</visible>
                <label>Titel 1</label>
                <description>1. oder einzige Zeile der Überschrift ein.</description>
                <type>text</type>
            </brand_header_title>
            <brand_header_subTitle>
                <visible>1</visible>
                <required>1</required>
                <label>Titel 2</label>
                <description>2. Zeile der Überschrift (oder leer)</description>
                <type>text</type>
            </brand_header_subTitle>
            <call2Action>
                <visible>1</visible>
                <label>Call 2 Action Text</label>
                <description>Hier kommt der Button Text hin.</description>
                <type>text</type>
            </call2Action>
            <brand_header_titlePosition>
                <visible>1</visible>
                <label>Position des Titels und Untertitel</label>
                <description>Sie können verschiedene Positionen für Titel und Untertitel wählen.</description>
                <type>select</type>
                <values>
                    <value_1>
                        <label>Titel rechts</label>
                        <value>right</value>
                    </value_1>
                    <value_2>
                        <label>Titel links</label>
                        <value>left</value>
                    </value_2>
                </values>
                <sort_order>0</sort_order>
            </brand_header_titlePosition>
            <brand_header_link>
                <visible>1</visible>
                <label>Link</label>
                <description>Das Linkziel des Headers.</description>
                <type>text</type>
            </brand_header_link>
            <brand_header_text>
                <visible>1</visible>
                <label>Text</label>
                <description>Hier kommt der SEO Text rein.</description>
                <type>textarea</type>
            </brand_header_text>
            <anchorlink>
                <visible>1</visible>
                <label>Ankerlink nach unten</label>
                <description>Fügt einen Ankerlink am Ende des Textes ein.</description>
                <type>checkbox</type>
                <value>1</value>
            </anchorlink>

            <template translate="label">
                <label>Template</label>
                <visible>0</visible>
                <type>select</type>
                <value>webmasterei/landingpage/Header.phtml</value>
            </template>
        </parameters>
    </brand_header_widget>
